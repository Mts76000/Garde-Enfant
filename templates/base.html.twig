<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# meta #}
        <link rel="icon" href="{{ asset('asset/img/logo_carre.png') }}" type="image/png">
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/home.scss') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
        {% endblock %}
    </head>
    <body>

    <header>
        <nav id="burger-menu">
            <i class="fa-solid fa-xmark close-burger"></i>
            <ul>
                {% if app.user == false %}
                    <a class="button nav_button" href="{{ path('app_login') }}">Connexion</a>
                    <a class="button nav_button" href="{{ path('app_register') }}">Inscription</a>
                {% else %}
                  <a class="button nav_button" href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-user"></i> Profil</a>
                    <a class="button nav_button" href="{{ path('app_logout') }}"><i class="fa-solid fa-right-from-bracket"></i> Déconnexion</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="button nav_button" href="{{ path('app_admin') }}"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
                    {% elseif is_granted('ROLE_PRO') %}
                        <a class="button nav_button" href="{{ path('app_pro') }}"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
                    {% elseif is_granted('ROLE_PARENT') %}
                        <a class="button nav_button" href="{{ path('app_user') }}"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
                    {% endif %}
                {% endif %}
                <hr>
                <li><a class="liste" href="{{ path('app') }}">Accueil</a></li>
                <li><a class="liste" href="{{ path('app_contact') }}">Contact</a></li>
                <li><a class="liste" href="{{ path('app_mentions') }}">Mentions Légales</a></li>
                <li><a class="liste" href="{{ path('app_faq') }}">F.A.Q</a></li>
            </ul>
        </nav>
        <nav class="desktop">
            <a class="logo" href="{{ path('app') }}"><img class="logo" src="{{ asset('asset/img/logo.png') }}" alt="Logo"></a>
            <a class="burger" href="#"><i class="fa-solid fa-bars"></i></a>
            <ul class="nav_list"> 
                <li><a class="liste" href="{{ path('app') }}">Accueil</a></li>
                <li><a class="liste" href="#">Contact</a></li>
                <li><a class="liste" href="{{ path('app_mentions') }}">Mentions Légales</a></li>
                <li><a class="liste" href="{{ path('app_faq') }}">F.A.Q</a></li>  
            </ul>
        </nav>
    
    </header>

        {% block body %}
        
        {% endblock %}
    
    <button id="btnTop" style="display: none;"><i class="fa-regular fa-circle-up"></i></button>

        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin="">
        </script>
        {% endblock %}
    </body>
</html>
