{% extends 'admin.html.twig' %}

{% block title %}Paiement - Pitchoune{% endblock %}

{% block body %}
    <script src="https://js.stripe.com/v3/"></script>
    <div class="container">
        <h1>Démo de Paiement avec Stripe</h1>
        <div id="order-summary">
            <h2>Récapitulatif de la commande</h2>
            <p>Service: Garde d'enfant</p>
            <p>Durée: 2 heures</p>
            <p>Prix par heure: €4.51</p>
            <p>Total: {{ 2 * 4.51 }} €</p>
        </div>
        <div id="error-message"></div>
        <form id="payment-form">
            <div class="form-group">
                <label for="cardholder-name">Nom du titulaire de la carte</label>
                <input type="text" id="cardholder-name" value="{{ user.nom }} {{ user.prenom }}" required>
            </div>
            <div class="form-group">
                <label for="email">Adresse e-mail</label>
                <input type="email" id="email" value="{{ user.email }}" required>
            </div>
            <div class="form-group">
                <label for="address">Adresse</label>
                <input type="text" id="address" value="{{ user.adresse }}" required>
            </div>
            <div class="form-group">
                <label for="city">Ville</label>
                <input type="text" id="city" value="" required>
            </div>
            <div class="form-group">
                <label for="zip">Code postal</label>
                <input type="text" id="zip" value="{{ user.ZIP }}" required>
            </div>
            <div class="form-group">
                <label for="country">Pays</label>
                <input type="text" id="country" value="France" required>
            </div>
            <div class="form-group">
                <label for="card-element">Informations de carte bancaire</label>
                <div id="card-element" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;"></div>
            </div>
            <button type="submit" id="card-button">Payer maintenant</button>
        </form>
    </div>
{% endblock %}
